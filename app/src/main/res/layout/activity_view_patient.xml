<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controllers.ViewPatientActivity">

    <HorizontalScrollView
        android:id="@+id/headerScroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSr"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="SR"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPatientName"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="Name"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPatientMobile"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="Mobile"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPatientEmail"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="Email"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="Address"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHistory"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="History"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtReports"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="Reports"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPatient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>